{% extends 'base.html.twig' %}

{% block title %}Les catégories{% endblock %}

{% block body %}
    <h1 class="mt-3">
        Catégories
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_category_new') }}" title="Ajouter une nouvelle catégorie"><i class="fa-solid fa-circle-plus"></i></a>
        {% endif %}
        <a href="{{ path('app_article_index') }}" title="Liste des articles"><i class="fa-solid fa-dolly"></i></a>
        <a href="{{ path('app_duo') }}"><i class="fa-solid fa-house"></i></a>
    </h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Label</th>
                <th>Description</th>
                {% if is_granted('ROLE_ADMIN') %}
                <th class="text-center">Actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td class="align-middle">{{ category.label }}</td>
                <td class="align-middle">{{ category.description }}</td>
                {% if is_granted('ROLE_ADMIN') %}
                <td class="text-center align-middle">
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}"><i class="fa-solid fa-pen"></i></a>
                </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
