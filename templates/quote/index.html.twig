{% extends 'base.html.twig' %}

{% block title %}Demander un devis{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/quote.css') }}">
{% endblock %}

{% block body %}

<div class="example-wrapper">
    <div class="row">
        <div class="col-12 col-md-6">
            {{ form_start(form) }}
            <div class="row">
                <h2>Vos informations</h2>
                <div class="row">
                    <div class="col-12 col-md-6">
                        {{ form_row(form.nom) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(form.prenom) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6">
                        {{ form_row(form.phone) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(form.email) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(form.adresse) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <h2>Expédition</h2>
                <div class="col-12 col-md-6">
                    {{ form_row(form.expedition) }}
                </div>
                <div class="col-12 col-md-6">
                    {{ form_row(form.transitaire) }}
                    {{ form_row(form.other_transitaire) }}
                </div>
            </div>
            <button type="submit" class="btn btn-primary my-2">Envoyer votre demande</button>
            <a href="{{ path('app_wishlist_index') }}" class="btn btn-secondary my-2">Retour à votre panier</a>
            {{ form_end(form) }}
        </div>
        <div class="col">
            <h2>Récapitulatif des articles dans votre panier</h2>
            <table class="table table-sm table-striped small">
                <thead>
                <tr>
                    <th class="text-center">Article</th>
                    <th class="text-center">Quantité</th>
                    <th>Détails</th>
                </tr>
                </thead>
                <tbody>
                {% for item in wishlist.wishlistLines %}
                    <tr>
                        <td class="text-center align-middle">
                            <div class="d-inline-block" style="background-image: url('{{ asset('uploads/' ~ item.article.image) }}');
                                    width: 50px; height: 50px; background-position: center; background-size: cover;">
                            </div><br>
                            DUO#{{ item.article.id }}
                        </td>
                        <td class="text-center align-middle">{{ item.quantity }}</td>
                        <td class="align-middle">{{ item.details }}</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3">Nb articles: <strong>{{ wishlist.wishlistLines|length }}</strong></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
{% endblock %}
