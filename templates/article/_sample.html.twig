<div class="row">
    {% set idCategory = 0 %}
    {% for article in articles %}
        {% set idCategory = article.category.id %}
    <div class="col-4 mb-2 d-sm-none position-relative overflow-hidden h-50">
        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="stretched-link position-absolute w-100 h-100">&nbsp;</a>
        <div class="card bg-dark text-white">
            <div class="card-img-top embed-responsive embed-responsive-1by1" style="object-fit: cover; width: 100%;height: 20vw;">
                <img src="{{ asset('uploads/' ~ article.image) }}" class="card-img-top embed-responsive-item" alt="...">
            </div>
            <div class="card-img-overlay position-relative">
                <p class="card-title mb-1 position-absolute end-0 bottom-0 px-1 bg-dark small" style="font-size: xx-small">DUO#{{ article.id }}</p>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-4 col-md-3 col-lg-2 mb-2 d-none d-sm-block position-relative">
        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="stretched-link position-absolute w-100 h-100">&nbsp;</a>
        <div class="card">
            <div>
                <img src="{{ asset('uploads/' ~ article.image) }}" class="w-100" alt="...">
            </div>
            <div class="card-body p-1">
                <p class="card-title mb-1">DUO#{{ article.id }}</p>
            </div>
        </div>
    </div>
    {% endfor %}
    <div class="col-4 mb-2 d-sm-none position-relative overflow-hidden h-50 d-flex align-items-center">
        <a href="{{ path('app_category_articles', {'id': idCategory}) }}" class="w-100 h-100 text-decoration-none">
            Afficher tout
        </a>
        <div class="card border-0 text-white">
            <div class="card-img-top embed-responsive embed-responsive-1by1" style="object-fit: cover; width: 100%;height: 20vw;">

            </div>
            <div class="card-img-overlay position-relative">

            </div>
        </div>
    </div>
    <div class="col-12 col-sm-4 col-md-3 col-lg-2 mb-2 d-none d-sm-block d-flex align-items-center position-relative">
        <a href="{{ path('app_category_articles', {'id': idCategory}) }}" class="w-100 h-100 text-decoration-none">
            Afficher tout
        </a>
        <div class="card border-0">
            <div>

            </div>
            <div class="card-body p-1">

            </div>
        </div>
    </div>
</div>