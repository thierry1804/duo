{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ article.image }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ article.label }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ article.couleur }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ article.taille }}</td>
            </tr>
            <tr>
                <th>Pointure</th>
                <td>{{ article.pointure }}</td>
            </tr>
            <tr>
                <th>MinCmd</th>
                <td>{{ article.minCmd }}</td>
            </tr>
            <tr>
                <th>MinCmdUnit</th>
                <td>{{ article.minCmdUnit }}</td>
            </tr>
            <tr>
                <th>Poids</th>
                <td>{{ article.poids }}</td>
            </tr>
            <tr>
                <th>Longueur</th>
                <td>{{ article.longueur }}</td>
            </tr>
            <tr>
                <th>Largeur</th>
                <td>{{ article.largeur }}</td>
            </tr>
            <tr>
                <th>Hauteur</th>
                <td>{{ article.hauteur }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ article.disponible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EditedAt</th>
                <td>{{ article.editedAt ? article.editedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}">back to list</a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
